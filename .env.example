# ============================================
# TMDB API Configuration
# ============================================
# Get your free API key from: https://www.themoviedb.org/api
# 1. Sign up at https://www.themoviedb.org
# 2. Go to Settings â†’ API
# 3. Request an API key (v3 auth)
# 4. Copy and paste your key below
TMDB_API_KEY=your_tmdb_api_key_here

# ============================================
# Application Settings
# ============================================
# Environment type: development or production
ENVIRONMENT=development

# Debug mode: true or false
DEBUG=false

# ============================================
# Recommendation Parameters
# ============================================
# Maximum number of recommendations to show
MAX_RECOMMENDATIONS=10

# Default number of recommendations
DEFAULT_RECOMMENDATIONS=5

# Minimum number of recommendations
MIN_RECOMMENDATIONS=3

# ============================================
# Data Configuration
# ============================================
# Path to movies dataset
DATA_PATH=data/movies.csv

# Enable caching for better performance
CACHE_ENABLED=true

# ============================================
# API Configuration
# ============================================
# Request timeout in seconds
REQUEST_TIMEOUT=10

# Maximum number of retries
MAX_RETRIES=3
